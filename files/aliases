# global
alias -g g='| grep'

# short
alias ff='rm -rf'
alias py='python3 '
alias nrc='nvim ~/.config/nvim/init.vim'
alias dc='docker'
alias dcc='docker-compose'

# force push only if all fetched
alias gfp='git push --force-with-lease'

# utils
alias size='du -sh'
alias reload='source ~/.zshrc'
alias pl="cd ~/Desktop/playground"
alias nts="nvim ~/Desktop/notes.md"

function ya {
  cd ~/Work/ya/$1
}

function avi2mp4 () {
  ffmpeg -i $1 -c:v libx264 -crf 19 -preset slow -c:a libfaac -b:a 192k -ac 2 $2
}

function ni {
  npm install "$@" && osascript -e 'display notification "Get back to work!" with title "NPM install finished"'
}
