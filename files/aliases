# global
alias -g g='| grep'

# short
alias to='cd'
alias ff='rm -rf'
alias py='python3 '
alias nrc='nvim ~/.config/nvim/init.vim'

# git
alias gdc='git diff --cached'
# force push current branch
alias gfp='git push origin +$(current_branch)'
# push and set upstream
alias gpu+='git push -u origin $(current_branch)'
# remove not merged branches
alias gbda='git branch --no-color --merged | command grep -vE "^(\*|\s*master\s*$)" | command xargs -n 1 git branch -d'

# utils
alias size='du -sh'
alias reload='source ~/.zshrc'
alias pl="cd ~/Desktop/playground"
alias cm="cd ~/Work/cian-manager"
alias nts="nvim ~/Desktop/notes/"

function md {
  mkdir $1 && cd $1
}

function avi2mp4 () {
  ffmpeg -i $1 -c:v libx264 -crf 19 -preset slow -c:a libfaac -b:a 192k -ac 2 $2
}

function ni {
  npm install "$@" && osascript -e 'display notification "Get back to work!" with title "NPM install finished"'
}
