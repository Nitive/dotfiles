// Place your settings in this file to overwrite the default settings
{
  "css.validate": false,
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "all",
  "editor.rulers": [80, 120],
  "editor.snippetSuggestions": "top",
  "files.insertFinalNewline": true,
  "keyboard.dispatch": "keyCode",
  "terminal.external.osxExec": "/Applications/iTerm.app",
  "tslint.autoFixOnSave": true,
  "vim.enableNeovim": true,
  "window.openFilesInNewWindow": "off",
  "window.zoomLevel": 0,
  "files.associations": {
    "*.js": "javascriptreact",
    ".browserslistrc": "properties",
    ".eslintrc": "jsonc",
    "*helmfile.yaml": "helm"
  },
  "files.exclude": {
    ".enb": true,
    ".npm": true,
    ".pulp-cache": true,
    ".stack-work": true,
    "**/node_modules": true,
    "bower_components": true,
    "build/react/assets": true,
    "output": true
  },
  "[markdown]": {},
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "never",
  "breadcrumbs.enabled": true,
  "workbench.statusBar.visible": true,
  "explorer.confirmDragAndDrop": false,
  "vim.neovimPath": "/usr/local/bin/nvim",
  "javascript.autoClosingTags": false,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "cSpell.userWords": [
    "devtool"
  ],
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "typescript.tsserver.log": "verbose",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.gotoLocation.multiple": "goto",
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "extensions.ignoreRecommendations": false,
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "jenkins.pipeline.linter.connector.user": "maxim-samoilov",
  "jenkins.pipeline.linter.connector.pass": "yes-disdain-purdue-termite-seemly",
  "jenkins.pipeline.linter.connector.url": "https://jenkins.csssr.ru/pipeline-model-converter/validate",
  "workbench.colorTheme": "Atom One Dark",
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "vs-kubernetes": {
    "vs-kubernetes.minikube-path": "/Users/nitive/.vs-kubernetes/tools/minikube/darwin-amd64/minikube"
  },
  "yaml.schemas": {
    "file:///Users/nitive/.vscode/extensions/me-dutour-mathieu.vscode-github-actions-2.2.7/schemas/workflow.schema.json": "/.github/workflows/*.yml",
    "file:///Users/nitive/.vscode/extensions/me-dutour-mathieu.vscode-github-actions-2.2.7/schemas/action.schema.json": "/action.yml"
  },
  "terraform.indexing": {
    "enabled": true,
    "liveIndexing": false,
    "delay": 500,
    "exclude": [
      ".terraform/**/*",
      "**/.terraform/**/*"
    ]
  },
  "terraform.languageServer": {
    "enabled": false,
    "args": []
  },
  "[helm]": {},
  "go.formatTool": "goimports",
  "go.useLanguageServer": true
}
